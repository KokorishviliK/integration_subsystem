Функция ПолноеИмяФормыОбработки() Экспорт
	
	Имя = ИТК_КонструкторЗапросовПовтИсп.ИмяОбработки();
	
	Если ЗначениеЗаполнено(Имя) Тогда
		
		Возврат СтрШаблон("Обработка.%1.Форма", Имя);
		
	Иначе
		
		Результат = Неопределено;
		
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

Функция СписокВыбораИсточникаСвязей(Источники, ИмяИсключения) Экспорт
	
	Результат = Новый СписокЗначений;
	Для Каждого ОписаниеИсточника Из Источники.ПолучитьЭлементы() Цикл
		
		Если ОписаниеИсточника.Name = ИмяИсключения Тогда
			Продолжить;
		КонецЕсли;
		
		Картинка = ИТК_КонструкторЗапросов.КартинкаИсточникаСвязи(ОписаниеИсточника.TableName);
		Результат.Добавить(ОписаниеИсточника.Name, ОписаниеИсточника.Presentation, , Картинка);
		
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

