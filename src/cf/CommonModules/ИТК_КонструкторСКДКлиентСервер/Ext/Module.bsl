		Результат = БиблиотекаКартинок.Реквизит;
		
	ИначеЕсли Вид = ИТК_Перечисления.СКДВидыПолейНаборовДанныхНабор() Тогда
		
		Результат = БиблиотекаКартинок.ВложеннаяТаблица;
		
	Иначе
		
		Результат = БиблиотекаКартинок.ИТК_Папка;
		
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

